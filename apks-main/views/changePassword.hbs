<html lang="en">
    <head>
    
        <title>QubStore - Change Password</title>
        <link rel="shortcut icon" href="assets/images/favicon.PNG"/>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" rel="stylesheet">

        <style>
            .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            }
            html,body {
            height: 100%;
            }

            body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
            }

            .form-signin {
            width: 100%;
            max-width: 330px;
            padding: 15px;
            margin: auto;
            }
            .form-signin .checkbox {
            font-weight: 400;
            }
            .form-signin .form-control {
            position: relative;
            box-sizing: border-box;
            height: auto;
            padding: 10px;
            font-size: 16px;
            }
            .form-signin .form-control:focus {
            z-index: 2;
            }
            .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
            }
            .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
            }


            @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
            }
        </style>
<!-- Custom styles for this template -->
    </head>
    <body class="">
    <div class="container">
        
        <div class="col-md-6 mx-auto p-4 bg-light rounded shadow text-center">
            <img class="mb-2" src="assets/images/favicon.PNG" alt="" width="100" height="100">
            <h3 class="font-weight-normal">Please Fill the following To Change Your Password</h3>
            <br>
            <input type="password" id="ch_password" class="form-control col-md-12 mt-3" placeholder="password" name="user_name" required >
            <input type="password" id="ch_new_password" class="form-control col-md-12 mt-3" placeholder="password" name="user_name" required >
            <input type="password" id="ch_new_confirmPassword" class="form-control col-md-12 mt-3" placeholder="Password Confirm" name="password" required>
            <button class="btn btn-lg btn-primary btn-block mt-3" onclick="changePassword()" style="background: #0077be;;" >Change Password</button>
            
        </div>
        
        </div>
        
        <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js" integrity="sha512-bZS47S7sPOxkjU/4Bt0zrhEtWx0y0CRkhEp8IckzK+ltifIIE9EMIMTuT/mEzoIMewUINruDBIR/jJnbguonqQ==" crossorigin="anonymous"></script>
        <script   src="assets/js/login.js"></script>
    </body>
</html>
